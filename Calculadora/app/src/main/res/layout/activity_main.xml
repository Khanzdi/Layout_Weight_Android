<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.example.personal.calculadora.MainActivity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:background="#CCFFE5"
       android:orientation="horizontal"
       android:layout_weight="1">

       <TextView
           android:id="@+id/textView"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="3dp"
           android:background="#6CEE4B"
           android:text="Mixx Calculator!"
           android:textAlignment="center"
           android:textColor="#F118"
           android:textSize="35dp"
           android:textStyle="bold" />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#CCFFE5"
        >
    <TextView
        android:id="@+id/visor"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:textColor="#F11"
        android:layout_marginLeft="8dp"
        android:background="#ccc3a9"/>
        <Button
            android:id="@+id/btnborrar"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginStart="2dp"
            android:text="CE"
            android:background="#FF0000"
            android:textSize="28dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#CCFFE5"
        >
        <Button
            android:id="@+id/btnuno"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:text="1"
            android:textStyle="bold"
            android:background="#FF9933"
            android:textSize="45dp"/>
        <Button
            android:id="@+id/btndos"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:text="2"
            android:background="#FF9933"
            android:textStyle="bold"
            android:textSize="45dp"/>
        <Button
            android:id="@+id/btntres"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="#FF9933"
            android:text="3"
            android:textStyle="bold"
            android:textSize="45dp"/>
        <Button
            android:id="@+id/btndividir"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:text="รท"
            android:background="#E4EC07"
            android:textStyle="bold"
            android:textSize="45dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#CCFFE5">

        <Button
            android:id="@+id/btncuatro"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="#FF9933"
            android:text="4"
            android:textSize="45dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btncinco"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="#FF9933"
            android:text="5"
            android:textSize="45dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnseis"
            android:layout_width="70dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="#FF9933"
            android:text="6"
            android:textSize="45dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnpor"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="#3399CC"
            android:text="X"
            android:textSize="45dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:background="#CCFFE5">
<Button
    android:id="@+id/btnsiete"
    android:layout_width="70dp"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:text="7"
    android:background="#FF9933"
    android:textStyle="bold"
    android:textSize="45dp"/>
<Button
    android:id="@+id/btnocho"
    android:layout_width="70dp"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:text="8"
    android:background="#FF9933"
    android:textStyle="bold"
    android:textSize="45dp"/>
<Button
    android:id="@+id/btnnueve"
    android:layout_width="70dp"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:text="9"
    android:background="#FF9933"
    android:textStyle="bold"
    android:textSize="45dp"/>
<Button
    android:id="@+id/btnmenos"
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:text="-"
    android:background="#CC0000"
    android:textStyle="bold"
    android:textSize="45dp"/>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:background="#CCFFE5">
<Button
    android:id="@+id/btncero"
    android:layout_width="70dp"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:text="0"
    android:background="#FF9933"
    android:textStyle="bold"
    android:textSize="45dp"/>
<Button
    android:id="@+id/btnpunto"
    android:layout_width="70dp"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:text="."
    android:background="#81FFCC"
    android:textStyle="bold"
    android:textSize="45dp"/>
<Button
    android:id="@+id/btnigual"
    android:layout_width="83dp"
    android:layout_height="93dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:text="="
    android:background="#07EC90"
    android:textStyle="bold"
    android:textSize="45dp"/>
<Button
    android:id="@+id/btnmas"
    android:layout_width="80dp"
    android:layout_height="90dp"
    android:layout_margin="10dp"
    android:text="+"
    android:background="#00CC00"
    android:textStyle="bold"
    android:textSize="45dp"/>
</LinearLayout>
</LinearLayout>